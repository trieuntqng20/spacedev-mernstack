{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node", //
        "target": "ES2020",
        "outDir": "dist",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@src/*": ["src/*"]
        }
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "include": ["src/**/*"]
}
